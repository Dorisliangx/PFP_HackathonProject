@import 'weui.wxss';
.top{
    height: 200rpx;
}

.leo-ad-comm {
    width: 600rpx;
    height: 80rpx;
    margin: 0 auto;
    text-align: center;
    margin-top: 10rpx;
}


.leo-footer {
    text-decoration: underline;
}

.leo-right-jiantou {
    padding-right: 10rpx;
}

.leo-right-jiantou::after {
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    right: 10px;
    margin-top: -4px;
}

.page_bottom_ad {
    width: 100%;
    height: 30px!important;
    margin-top: 3px!important;
}
.container {
  margin-left: 20px !important; /* 为容器添加内边距 */
  
}

.date-picker .picker .space {
  margin-right: 37px; /* 调整目标日期和 {{date}} 之间的间距 */
}
.date-picker .space1 {
  margin-top: 15px; /* 调整目标日期和 {{date}} 之间的间距 */
}

/* 自定义按钮样式 */
.weui-btn_primary {
  width: 200rpx; /* 设置按钮宽度 */
  background-color: #1AAD19; /* 设置按钮背景颜色 */
  color: #FFFFFF; /* 设置按钮文字颜色 */
  left: -15rpx;
}


