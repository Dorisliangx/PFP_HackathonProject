<!--pages/invest/invest.wxml-->
<view class="container">
  <view class="titleContainer">
   <view class="title1">
    推荐投资
    </view>
  </view>
  <view  class="container2">
  <scroll-view scroll-y class="scrollCss">
    <view class="knowledge-list" wx:if="{{ newList.length > 0 }}">
        <block wx:for="{{newList}}" wx:key="id">
            <view class="knowledge-item" bindtap="goToDetailPage" data-id="{{item._id}}">
                <view class="left">
                    <image class="knowledge-image" src="{{item.img}}" mode="aspectFill"></image>
                </view>
                <view class="middle">
                    <view class="title">{{item.title}} </view>
                    <view class="title3">{{item.type}} </view>
                    <view class="summary">年利率：{{item.price}}%</view>
                </view>
                <view class="right">
                    <text class="detail">详情</text>
                </view>
            </view>
        </block>
    </view>
 </scroll-view>
    <view class="no-result" wx:if="{{ knowledgeList.length === 0 && showNoResult }}">
        暂无相关信息
    </view>

 
  </view>
   
  
 
</view>