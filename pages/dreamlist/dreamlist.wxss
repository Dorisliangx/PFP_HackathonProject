/* pages/dreamlist/dreamlist.wxss */
/* 包裹图片和两行文字 */

.title{
    text-align: center; 
    height: 50rpx;
  line-height: 50rpx;  /** 垂直居中 **/ 
    margin-top: 20rpx;
    font-size: 48rpx;
    font-weight: 900;
    color: var(--globalColor);
    opacity: 0.8;
}
.view_tupian_wenzi {
    height: 120rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    
    /* 圆角 */
    border-radius: 20rpx;
  
    /* 边 */
    border: 3rpx solid #E0E3DA;
    box-shadow:5rpx 5rpx 5rpx 5rpx #E0E3DA;
  
    background-color: #ffffff;
    margin: 30rpx;
  
    /* padding使得文字和图片不至于贴着边框 */
    padding: 30rpx;
  
  }
  
  /* 图片 */
  
  .image_1 {
    width: 100rpx;
    height: 100rpx;
  }
  .return{
      margin-top: 20rpx;
      width: 40rpx;
      height: 40rpx;
  }
  /* 包裹两行文字 */
  
  .view_wenzi2 {
    width: 100%;
    margin-left: 25rpx;
    display: flex;
    flex-direction: column;
  }
  
  /* 小字 */
  
  .text_small {
    font-size: 30rpx;
    word-break: break-all;
    color: #7a7878;
    margin-top: 10rpx
  }
  